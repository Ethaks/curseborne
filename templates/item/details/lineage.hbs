<section
	class="tab standard-form {{tab.id}} {{tab.cssClass}}"
	data-group="primary"
	data-tab="{{tab.id}}"
>
	{{! Path Skills }}
	{{curse-formGroup
    systemFields.skills
    formGroupOptions
    options=skills.options}}

	{{! Torment }}
	{{#if item.isEmbedded}}
		<div class="form-group torment">
			<label for="{{rootId}}.torment">{{localize "TYPES.Item.torment"}}</label>
			<div class="form-fields items-list">
				{{#if torment}}
					<li class="item flexrow" data-item-id="{{torment.id}}">
						<div class="item-image">
							<img src="{{torment.img}}" alt="{{torment.name}}" width="24" height="24" />
						</div>
						<span class="item-name">{{torment.name}}</span>
						<div class="item-controls">
							{{#if isEditMode}}
								<button
									type="button"
									class="item-control unbutton"
									data-tooltip
									aria-label="{{localize 'CURSEBORNE.ContextMenu'}}"
									data-action="contextMenu"
								>
									<i class="fa-solid fa-fw fa-ellipsis-vertical"></i>
								</button>
							{{/if}}
						</div>
					</li>
				{{else}}
					{{#if isEditMode}}
						<button
							type="button"
							class="add-item"
							data-action="createDoc"
							data-type="torment"
							data-system-type="lineage"
							data-system-lineage="{{system.identifier}}"
						>
							<i class="fa-solid fa-plus"></i>
							<span>{{localize "DOCUMENT.Create" type=(localize 'TYPES.Item.torment')}}</span>
						</button>
					{{else}}
						<span>{{localize "CURSEBORNE.None"}}</span>
					{{/if}}
				{{/if}}
			</div>
		</div>
	{{/if}}
</section>
