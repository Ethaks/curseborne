<section class="tab {{tab.cssClass}} standard-form"
         data-group="primary"
         data-tab="details">
    {{curse-formGroup systemFields.type formGroupOptions}}
    {{curse-formGroup systemFields.uuid formGroupOptions}}

    {{! Bond }}
    <fieldset class="bond">
        <legend>{{localize "CURSEBORNE.SOCIAL.Bond"}}</legend>
        {{curse-formGroup systemFields.bond.fields.dots formGroupOptions}}
        {{curse-formGroup systemFields.bond.fields.uses formGroupOptions}}
    </fieldset>

    {{#if (eq system.type "contact") }}
        <fieldset class="contact">
            <legend>{{localize "CURSEBORNE.SOCIAL.Contact"}}</legend>
            {{curse-formGroup
            systemFields.contact.fields.path
            formGroupOptions
            choices=pathChoices
            }}
            {{curse-formGroup systemFields.contact.fields.dots formGroupOptions}}
            {{curse-formGroup systemFields.contact.fields.invokes formGroupOptions}}
            {{curse-formGroup systemFields.contact.fields.tags formGroupOptions}}
        </fieldset>
    {{/if}}
</section>
